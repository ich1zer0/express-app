<section>
  <div class="card">
    <h1 class="card-header h6"><%= title %></h1>
    <div class="card-body">
      <form>
        <div class="form-box d-sm-table w-100 mx-auto">
          <dl class="d-sm-table-row">
            <dt class="d-sm-table-cell fw-normal p-sm-2 text-sm-end">
              <label for="inputEmail" class="text-nowrap">
                E-Mail Address
              </label>
            </dt>
            <dd class="d-sm-table-cell w-100 p-sm-2">
              <input
                type="email"
                name="loginEmail"
                id="inputEmail"
                class="form-control"
              />
            </dd>
          </dl>
          <dl class="d-sm-table-row">
            <dt class="d-sm-table-cell fw-normal p-sm-2 text-sm-end">
              <label for="inputPassword" class="text-nowrap"> Password </label>
            </dt>
            <dd class="d-sm-table-cell w-100 p-sm-2">
              <input
                type="password"
                name="loginPassword"
                id="inputPassword"
                class="form-control"
              />
            </dd>
          </dl>
          <dl class="d-sm-table-row">
            <dt class="d-sm-table-cell fw-normal p-sm-2 text-sm-end"></dt>
            <dd class="d-sm-table-cell w-100 p-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="flexCheckDefault"
                />
                <label class="form-check-label" for="flexCheckDefault">
                  Remember Me
                </label>
              </div>
            </dd>
          </dl>
          <dl class="d-sm-table-row">
            <dt class="d-sm-table-cell fw-normal p-sm-2 text-sm-end"></dt>
            <dd class="d-sm-table-cell w-100 p-sm-2">
              <div class="d-flex flex-column flex-sm-row align-items-sm-center">
                <button type="submit" class="btn btn-primary">Login</button>
                <a class="text-decoration-none mt-2 mt-sm-0 ms-sm-2" href="#">
                  Forgot Your Password?
                </a>
              </div>
            </dd>
          </dl>
        </div>
      </form>
    </div>
  </div>
</section>
